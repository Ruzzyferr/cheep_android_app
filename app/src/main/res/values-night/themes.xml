<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_ruzgar_bulut" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--dark mode-->
    <style name="SCREEN">
        <item name="android:background">#151515</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#DFD9D9</item>
    </style>

    <style name="BUTTON">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">#0B0A0A</item>
    </style>

</resources>